<Page
    x:Class="VESTIGENEWS.ReaderMode"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:VESTIGENEWS"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

  <ScrollViewer>
    <StackPanel>
      <StackPanel Orientation="Horizontal">

        <Button Content="&lt;" VerticalAlignment="Center" Click="GoBack" HorizontalAlignment="Left"
                Margin="10,0" Background="Transparent" BorderBrush="Transparent"
                Padding="20"/>

      </StackPanel>
      <TextBlock Text="{x:Bind Article.Text}" TextWrapping="WrapWholeWords"/>
    </StackPanel>

  </ScrollViewer>
</Page>
