<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="REMNANT.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:REMNANT"
    xmlns:typing="using:REMNANT.Typing"
    Shell.FlyoutBehavior="Disabled"
    Title="REMNANT">
    <ShellContent
        Title="REMNANT"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    <ShellContent
        Title="ArticleView"
        ContentTemplate="{DataTemplate local:ArticleView}"
        Route="ArticleView"/>
</Shell>
